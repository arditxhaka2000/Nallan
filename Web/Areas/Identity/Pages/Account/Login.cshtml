<section>
    <div class="container-fluid">
        <div class="row">
            <img class="bg-img-cover bg-center" src="/img/banneri1.png" alt="looginpage">
            <div class="col-xl-12 p-0">
                <div class="login-card">
                    <form class="theme-form login-form" id="account" method="post">
                        <h4>Login</h4>
                        <h6>Welcome back! Log in to your account.</h6>
                        <div class="form-group">
                            <label>Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-email"></i></span>
                                <input class="form-control" asp-for="Input.userName"  placeholder="@sharedRes.CheckKey("Username")" required>
                                <span asp-validation-for="Input.userName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input class="form-control" asp-for="Input.Password" placeholder="@sharedRes.CheckKey("Password")" required>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                @*<div class="show-hide"><span class="show">                         </span></div>*@
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div cass="">
                                <a class="text-decoration-none mt-3" id="forgot-password" asp-page="./ForgotPassword" localname="ForgotPassword">@sharedRes.CheckKey("ForgotPassword")</a>
                            </div>
                        </div>
                        @Html.ReCaptcha()
                        <div class="form-group">
                            <div class="checkbox">
                                <input id="checkbox1" type="checkbox">
                                @*<label for="checkbox1">Remember password</label>*@
                            </div>
                           @* <a class="link" href="forget-password.html">Forgot password?</a>*@
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">@sharedRes.CheckKey("Login")</button>
                            @*<button type="submit" class="btn btn-info"> @sharedRes["Login"]  </button>*@
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


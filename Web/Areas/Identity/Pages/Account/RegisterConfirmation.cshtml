@page
@model RegisterConfirmationModel

@{
    ViewData["Title"] = "Confirm your email";
}

<h1>@ViewData["Title"]</h1>

<p>
    Thank you for registering. Please check your email (<strong>@Model.Email</strong>) for confirmation instructions.
    <br />
    If you do not see the email, please check your spam folder.
</p>

@if (Model.DisplayConfirmAccountLink)
{
    <p>
        <a asp-page="/Account/ConfirmEmail" asp-route-email="@Model.Email">Resend confirmation email</a>
    </p>
}
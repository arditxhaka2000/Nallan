@page
@model RegisterModel;
@{
    ViewData["Title"] = "Register";
    var sharedRes = (Dictionary<string, string>)ViewData["Shared"];
    Layout = "_Layout";
}

<section>
    <div class="container-fluid pt-5">
        <div class="row m-0">
            <div class="col-12 p-0">
                <div class="login-card">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="theme-form login-form">
                        <h4>Create your account</h4>
                        <h6>Enter your personal details to create an account</h6>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.FirstName"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-user"></i></span>
                                        <input asp-for="Input.FirstName" class="form-control" required placeholder="First Name" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.LastName"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-user"></i></span>
                                        <input asp-for="Input.LastName" class="form-control" required placeholder="Last Name" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-email"></i></span>
                                <input asp-for="Input.Email" class="form-control" required placeholder="Test@gmail.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Input.PhoneNr"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-email"></i></span>
                                <input asp-for="Input.PhoneNr" class="form-control" required placeholder="04x xxx xxx" />
                                <span asp-validation-for="Input.PhoneNr" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input asp-for="Input.Password" class="form-control" required placeholder="*********" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <div class="show-hide"><span class="show"></span></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="icon-lock"></i></span>
                                <input asp-for="Input.ConfirmPassword" class="form-control" required placeholder="*********" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.Address"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-home"></i></span>
                                        <input asp-for="Input.Address" class="form-control" required placeholder="Address" />
                                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12">

                                <div class="form-group">
                                    <label asp-for="Input.City"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-location"></i></span>
                                        <input asp-for="Input.City" class="form-control" required placeholder="City" />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.Country"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-globe"></i></span>
                                        <input asp-for="Input.Country" class="form-control" required placeholder="Country" />
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.PostalCode"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="icon-mail"></i></span>
                                        <input asp-for="Input.PostalCode" class="form-control" required placeholder="Postal Code" />
                                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Create Account</button>
                        </div>
                        <p>Already have an account?<a class="ms-2" asp-area="Identity" asp-page="/Account/Login">Sign in</a></p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <!-- Plugins JS start-->
    <script src="~/assets/js/sweet-alert/sweetalert.min.js"></script>
    <!-- Include validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}


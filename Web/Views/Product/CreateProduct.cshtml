@model OA_Web.Models.Index4CreateProductViewModel;
@{
    string currentLanguage = ViewContext.RouteData.Values["lang"].ToString();
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-header">
            <div class="row mt-5">

                <div class="card">
                    <div class="card-header pb-0">
                        <h3>Create New Product</h3>
                    </div>
                    <div class="card-body">
                        <form class="theme-form" id="createProdId" action="@Url.Action("AddProduct","Product",new { lang = currentLanguage})" method="post">
                            <div class="mb-3 row">
                                <div class="col-sm-3">
                                    <label class="" for="Title">Title</label>
                                    <input class="form-control" id="Title" type="text" name="Title" placeholder="Title">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="ProductCode">ProductCode</label>
                                    <input class="form-control" id="ProductCode" type="text" name="ProductCode" placeholder="ProductCode">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="GTIN">GTIN</label>
                                    <input class="form-control" id="GTIN" type="text" placeholder="GTIN" name="GTIN">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="Quantity">Total Quantity</label>
                                    <input class="form-control" id="Quantity" type="text" placeholder="Contact" name="Quantity">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="Description">Description</label>
                                    <input class="form-control" id="Description" name="Description" type="text" placeholder="Description">
                                </div>

                                <div class="col-sm-3">
                                    <label class=" " for="Brand">Category</label>
                                    @* <input class="form-control" id="Brand" name="Brand" type="text" placeholder="Brand"> *@
                                    <select class="js-example-placeholder-multiple col-sm-12" multiple="multiple" name="_CategoryIds">
                                        @if (Model.Categories.Count > 0)
                                        {
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category.Id">@category.Name</option>

                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="ProductUrl">ProductUrl</label>
                                    <input class="form-control" id="ProductUrl" name="ProductUrl" type="text" placeholder="ProductUrl">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="Price">Price</label>
                                    <input class="form-control" id="Price" name="Price" type="text" placeholder="Price">
                                </div>
                                <div class="col-sm-3">
                                    <label class=" " for="OldPrice">OldPrice</label>
                                    <input class="form-control" id="OldPrice" name="OldPrice" type="text" placeholder="OldPrice">
                                </div>

                            </div>

                            <div class="row mb-0">
                                <div class="col-sm-6">
                                    <label class="  pb-0">Numbers</label>
                                    <div class="mb-0">
                                        @if (Model.Sizes != null)
                                        {
                                            @foreach (var size in Model.Sizes)
                                            {
                                                <div class="form-check form-check-inline checkbox checkbox-primary">
                                                    <input class="form-check-input size-checkbox" id="size+@size.Id" value="@size.Id" name="_SizeIds" type="checkbox">
                                                    <label class="form-check-label" for="size+@size.Id">@size.SizeNr</label>
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label class="  pb-0">Colors</label>
                                    <div class="mb-0">
                                        @if (Model.Colors != null)
                                        {
                                            @foreach (var color in Model.Colors)
                                            {
                                                <div class="form-check form-check-inline checkbox checkbox-primary">
                                                    <input class="form-check-input color-checkbox" name="_ColorIds" id="color+@color.Id" value="@color.Id" type="checkbox">
                                                    <label class="form-check-label" for="color+@color.Id">@color.Name</label>
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="  pb-0">Upload images</label>
                                    <div class="mb-0">
                                        <input type="file" class="form-control" id="File" name="File" autocomplete="off" multiple>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" id="saveProductBtn">Ruaj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/products.js"></script>
    <script src="/assets/js/select2/select2.full.min.js"></script>
    <script src="/assets/js/select2/select2-custom.js"></script>
}

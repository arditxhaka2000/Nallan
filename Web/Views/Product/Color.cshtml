@model Web.Models.SettingsVM.SettingsViewModel;
@{
    ViewData["Title"] = "Size List";
    string currentLanguage = ViewContext.RouteData.Values["lang"].ToString();
}
<div class="page-body">
    <div class="container mt-5">
        <h2>Manage Colors</h2>

        <!-- Button to open "Add New Size" modal -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addSizeModal">Add New Color</button>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Color</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Color in Model?.Colors)
                {
                    <tr>
                        <td><b>@Color.Name </b> </td>
                        <td><button class="btn btn-primary editColorBtn" data-id="@Color.Id" data-name="@Color.Name">Edit</button> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Add Size Modal -->
<div class="modal fade" id="addSizeModal" tabindex="-1" aria-labelledby="addSizeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSizeModalLabel">Add New Color</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="CreatColorForm" action="/@currentLanguage/Product/CreateColor">
                    <div class="mb-3">
                        <label for="SizeName" class="form-label">ColorName</label>
                        <input type="text" class="form-control" id="SizeName" name="Name" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addColorBtn">Add Color</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="editColorModal" tabindex="-1" aria-labelledby="editColorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editColorModalLabel">Edit Color</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editColorForm">
                    <input type="hidden" id="colorId" name="Id" value="" />
                    <div>
                        <label for="categoryName">Color Name</label>
                        <input type="text" class="form-control" id="colorName" name="Name" value="" />
                    </div>
                    <!-- Other fields as needed for your model -->
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="saveColorBtn" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/settingsscripts/settings.js"></script>

}
